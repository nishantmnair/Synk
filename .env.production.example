# ============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env.production and set all values appropriately.
# DO NOT commit .env.production to version control.
# Use this for production deployments only.

# ============================================================================
# SECURITY - Django Core
# ============================================================================

# REQUIRED: Generate a strong secret key
# Command: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-generated-secret-key-here

# Set to False for production (security critical)
DEBUG=False

# Your production domain(s)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# ============================================================================
# DATABASE - PostgreSQL (Configured for production)
# ============================================================================

DB_HOST=your-db-host
DB_NAME=synk_db_prod
DB_USER=synk_prod_user
DB_PASSWORD=your-secure-db-password
DB_PORT=5432

# ============================================================================
# SECURITY - HTTPS & CORS
# ============================================================================

# Production frontend origins (comma-separated for CORS)
PRODUCTION_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================================================
# API KEYS & SECRETS
# ============================================================================

# Gemini API Key (for AI features - keep secret!)
# Get your key: https://aistudio.google.com/apikey
GEMINI_API_KEY=your-gemini-api-key

# ============================================================================
# REDIS CONFIGURATION (for WebSocket & real-time support)
# ============================================================================

REDIS_HOST=your-redis-host
REDIS_PORT=6379

# ============================================================================
# ADDITIONAL SECURITY CONSIDERATIONS
# ============================================================================

# Additional security headers (if using reverse proxy, configure there)
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True

# ============================================================================
# DEPLOYMENT NOTES
# ============================================================================
# 1. Generate a strong SECRET_KEY using the command above
# 2. Use a strong, random database password
# 3. Set DEBUG=False to prevent information disclosure
# 4. Configure proper ALLOWED_HOSTS for your domain
# 5. Use environment variables for all secrets (not hardcoded)
# 6. Ensure .env.production is in .gitignore
# 7. Use HTTPS/TLS for all connections
# 8. Implement rate limiting at the reverse proxy level (nginx, etc.)
# 9. Set up proper logging and monitoring
# 10. Regularly update dependencies and scan for vulnerabilities
# ============================================================================
