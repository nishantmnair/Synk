# Environment Variables Template
# Copy this file to .env and .env.local (local overrides .env)
# NEVER commit .env or .env.local to version control

# ==========================================
# Django Core Settings
# ==========================================

DEBUG=False

# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-very-long-random-secret-key-here

# Comma-separated list of allowed domains
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,testserver

# ==========================================
# Database Configuration
# ==========================================

# PostgreSQL (for production/Docker)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=synk_db
DB_USER=postgres
DB_PASSWORD=secure-postgres-password

# SQLite (for local development - set DB_HOST=localhost to use SQLite)
# No additional configuration needed

# ==========================================
# Security & CORS
# ==========================================

# Frontend URLs for CORS (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ==========================================
# Email Configuration
# ==========================================

# Console backend (development): django.core.mail.backends.console.EmailBackend
# SMTP backend (production): django.core.mail.backends.smtp.EmailBackend
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Gmail example:
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-specific-password

# Generic SMTP:
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

DEFAULT_FROM_EMAIL=noreply@synk.app

# ==========================================
# Frontend Configuration
# ==========================================

# Django API URL for frontend
VITE_API_URL=http://localhost:8000

# ==========================================
# AI Services (Backend Only - DO NOT EXPOSE!)
# ==========================================

# IMPORTANT: These should ONLY be set on the backend
# NEVER expose API keys to the frontend

# Gemini AI API Key
GEMINI_API_KEY=your-gemini-api-key-here

# OpenAI API Key (if used)
OPENAI_API_KEY=your-openai-api-key-here

# ==========================================
# Frontend URL (for password reset links, etc)
# ==========================================

FRONTEND_URL=http://localhost:5173

# ==========================================
# Caching (for rate limiting)
# ==========================================

# For development (in-memory): default (used if not specified)
# For production (Redis):
# CACHE_BACKEND=django_redis.cache.RedisCache
# CACHE_LOCATION=redis://127.0.0.1:6379/1

